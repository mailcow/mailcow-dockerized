                  {% for mbox_template in mbox_templates %}
                    <option {% if mbox_template.template == iam_settings.default_template %}selected{% endif %}>
                      {{ mbox_template.template }}
                    </option>
                  {% endfor %}
                  </select>
                </div>
                <div class="col-2 p-0 d-flex"></div>
              </div>
            </div>
