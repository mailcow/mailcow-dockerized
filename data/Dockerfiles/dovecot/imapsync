        my $mysync = shift ;
        $mysync->{host1} = 'test1.lamiral.info' ;
        $mysync->{user1} = 'test1' ;
        $mysync->{password1} = 'secret1' ;
        $mysync->{host2} = 'test2.lamiral.info' ;
        $mysync->{user2} = 'test2' ;
        $mysync->{password2} ='secret2' ;
